<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste link Instagram" />

        <TextView
            android:id="@+id/text_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste link Facebook" />

        <TextView
            android:id="@+id/text_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste link Twitter" />

        <TextView
            android:id="@+id/text_tiktok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_tiktok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste link TikTok" />

        <TextView
            android:id="@+id/text_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paste link YouTube" />

        <Button
            android:id="@+id/button_send_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim" />
    </LinearLayout>
</ScrollView>
