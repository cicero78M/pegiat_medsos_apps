<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Instagram -->
        <ImageView
            android:id="@+id/image_instagram"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/caption_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Caption Instagram" />

        <TextView
            android:id="@+id/text_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://instagram.com/placeholder"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste link Instagram" />

        <!-- Facebook -->
        <ImageView
            android:id="@+id/image_facebook"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/caption_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Caption Facebook" />

        <TextView
            android:id="@+id/text_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://facebook.com/placeholder"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste link Facebook" />

        <!-- Twitter -->
        <ImageView
            android:id="@+id/image_twitter"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/caption_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Caption Twitter" />

        <TextView
            android:id="@+id/text_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://twitter.com/placeholder"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste link Twitter" />

        <!-- TikTok -->
        <ImageView
            android:id="@+id/image_tiktok"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/caption_tiktok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Caption TikTok" />

        <TextView
            android:id="@+id/text_tiktok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://www.tiktok.com/placeholder"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_tiktok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste link TikTok" />

        <!-- YouTube -->
        <ImageView
            android:id="@+id/image_youtube"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/caption_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Caption YouTube" />

        <TextView
            android:id="@+id/text_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://youtu.be/placeholder"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/button_paste_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paste link YouTube" />

        <Button
            android:id="@+id/button_send_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Kirim" />

    </LinearLayout>
</ScrollView>
