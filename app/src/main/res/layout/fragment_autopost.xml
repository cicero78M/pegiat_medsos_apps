<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_wrapper"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#1f1f1f"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/console_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/console_frame"
        android:padding="16dp"
        android:textColor="#00FF00"
        android:typeface="monospace"
        android:text="@string/console_header_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/social_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

        <FrameLayout
            android:id="@+id/icon_wrapper"
            android:layout_width="36dp"
            android:layout_height="36dp">

            <ImageView
                android:id="@+id/instagram_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_instagram"
                android:background="@drawable/icon_border"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/check_mark"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/check_mark_background"
                android:src="@drawable/ic_status_true"
                android:tint="@android:color/black"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/facebook_wrapper"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_facebook"
                android:background="@drawable/icon_border"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/facebook_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/check_mark_background"
                android:src="@drawable/ic_status_true"
                android:tint="@android:color/black"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/twitter_wrapper"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_twitter"
                android:background="@drawable/icon_border"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/twitter_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/check_mark_background"
                android:src="@drawable/ic_status_true"
                android:tint="@android:color/black"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tiktok_wrapper"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/tiktok_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_tiktok"
                android:background="@drawable/icon_border"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/tiktok_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/check_mark_background"
                android:src="@drawable/ic_status_true"
                android:tint="@android:color/black"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/youtube_wrapper"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/youtube_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_youtube"
                android:background="@drawable/icon_border"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/youtube_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/check_mark_background"
                android:src="@drawable/ic_status_true"
                android:tint="@android:color/black"
                android:visibility="gone" />

        </FrameLayout>

        </LinearLayout>

        <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="START"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#1f1f1f"
        android:background="@drawable/button_green" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
